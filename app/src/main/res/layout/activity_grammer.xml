<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutGrammer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.feature.grammer.GrammerActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tvCOnvertGrammer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:src="@drawable/ic_redo"
        app:backgroundTint="@color/default_bmb_shareLine1Color"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/tvGrammerEnd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvGrammerStart"
        app:layout_constraintTop_toTopOf="@+id/tvGrammerStart" />

    <TextView
        android:id="@+id/tvGrammerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Past Simple Tense"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/tvDisplay"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:id="@+id/tvGrammerDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/pst_represent_past_events_performed_by_adding_d_ed_and_there_are_irregular_verbs"
        android:textColor="@color/question"
        android:textSize="@dimen/tvDisplay"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvGrammerName" />

    <TextView
        android:id="@+id/tvGrammerStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="@dimen/tvDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCOnvertGrammer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGrammerEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tvDisplay"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/tvCOnvertGrammer"
        app:layout_constraintTop_toTopOf="@+id/tvCOnvertGrammer" />

</androidx.constraintlayout.widget.ConstraintLayout>