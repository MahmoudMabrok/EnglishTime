<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/snack_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvSnake"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/snameItem"
        android:textSize="@dimen/SnakeSize"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/imSnake"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/currentplay"
        android:gravity="center_horizontal"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_drawing"
        android:visibility="gone" />


</LinearLayout>